              </div>

      h2 Thing in button
      .DOCS_example
        .row
          .col
            a(href="").button.-primary Primary
              .right $300
          .col
            a(href="").button.-secondary Secondary
              .right Download now
          .col
            .button-group
              a(href="").button Learn more
              a(href="").button Buy now
                .right $500
      .DOCS_code
        pre
          code
            :escape-html
              <a href="" class="button -primary">
                Primary
                <div class="right">$300</div>
              </a>

              <a href="" class="button -secondary">
                Secondary
                <div class="right">Download now</div>
              </a>

              <div class="button-group">
                <a href="" class="button">Learn more</a>
                <a href="" class="button">
                  Buy now
                  <div class="right">$500</div>
                </a>
              </div>


